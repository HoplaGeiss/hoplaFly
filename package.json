{
  "name": "hoplaFly",
  "version": "1.0.0",
  "description": "Angular wrapper for hoplaFly Phaser game",
  "engines": {
    "node": ">=20.19.0"
  },
  "type": "module",
  "scripts": {
    "ng": "ng",
    "prebuild": "node scripts/install-functions.js",
    "build": "ng build",
    "start": "ng serve",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,html,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@netlify/functions": "^5.0.1",
    "phaser": "^3.88.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@playwright/test": "^1.56.1",
    "@rollup/rollup-darwin-arm64": "^4.52.5",
    "@types/node": "^20.19.0",
    "@vitest/ui": "^1.6.0",
    "canvas": "^3.2.0",
    "concurrently": "^9.2.1",
    "jsdom": "^24.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.0",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@9.0.0"
}
